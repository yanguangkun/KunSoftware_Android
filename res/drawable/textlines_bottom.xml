<?xml version="1.0" encoding="UTF-8"?>    
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->    
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >    
    <item>    
        <shape>    
            <solid android:color="#FFFFFF" />    
            <stroke    
                android:width="1dp"    
                android:color="#c8c7cc" />    
        </shape>    
    </item>    
    <item    
        android:bottom="1dp"  >    
        <shape>    
            <solid android:color="#eeedf3" />    
            <stroke    
                android:width="1dp"    
                android:color="#eeedf3" />    
        </shape>    
    </item>    
</layer-list>    